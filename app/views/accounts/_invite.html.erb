<div class="flex flex-column align-center gap">
  <% url = join_url(Current.account.join_code) %>

  <label class="flex flex-column gap full-width" style="--row-gap: 0.5em">
    <strong class="invite-label">Share to invite more people</strong>
    <span class="flex align-center gap input input--actor fill-white">
      <%= image_tag "person-add.svg", role: "presentation", size: 20, class: "colorize--black" %>
      <input type="text" class="input" id="invite_url" value="<%= url %>" readonly>
    </span>
  </label>

  <div class="flex align-center gap">
    <%= link_to_zoom_qr_code(url) do %>
      <span class="for-screen-reader">QR code</span>
      <%= image_tag "qr-code.svg", class: "colorize--black" %>
    <% end %>

    <%= button_to_copy_to_clipboard(url) do %>
      <span class="for-screen-reader">Copy URL</span>
      <%= image_tag "copy-paste.svg", class: "colorize--black" %>
    <% end %>

    <%= web_share_session_button(url, "Link to join Campfire", "Hit this link to join me in Campfire and start chatting.") do %>
      <span class="for-screen-reader">Share</span>
      <%= image_tag "share.svg", class: "colorize--black" %>
    <% end %>

    <% if Current.user.can_administer? %>
      <%= button_to account_join_code_path, class: "btn btn--regenerate" do %>
        <%= image_tag "refresh.svg", class: "colorize--black" %>
        <span class="for-screen-reader">Regenerate URL</span>
      <% end %>
    <% end %>
  </div>
</div>
